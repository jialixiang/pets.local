<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Available from</th>
      <th>Age</th>
      <th>Species</th>
      <th>Breed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.id %></td>
        <td><%= pet.name %></td>
        <td><%= pet.available_from %></td>
        <td><%= pet.age %></td>
        <td><%= pet.species %></td>
        <td><%= pet.breed %></td>
        <td><%= button_to 'Edit', edit_pet_path(pet), :method => "get", class: 'btn-primary' %></td>
        <td><%= button_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= button_to 'New Pet', new_pet_path, :method => "get", class: 'btn-primary' %>
