<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th colspan="3">Preference</th>
      <th colspan="2"></th>
    </tr>
    <tr>
      <th></th>
      <th>Age Range</th>
      <th>Species</th>
      <th>Breed</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <% if customer.preference != nil %>
          <td><%= customer.preference.age %></td>
          <td><%= customer.preference.species %></td>
          <td><%= customer.preference.breed %></td>
        <% else %>
          <td colspan="3"></td>
        <% end %>
        <td>
          <%= button_to 'Edit', edit_customer_path(customer), :method => "get", class: 'btn-primary' %>
        </td>
        <td>
          <%= button_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-danger' %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= button_to 'New Customer', new_customer_path, :method => "get", class: 'btn-primary' %>
